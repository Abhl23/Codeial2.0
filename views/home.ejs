<h1><%= title %></h1>

<section id="feed-posts">
  <h3>Posts</h3>

  <% if(locals.user) { %>
  <form action="/posts/create" method="post" id="new-post-form">
    <textarea
      name="content"
      cols="30"
      rows="3"
      placeholder="Type Here..."
    ></textarea>
    <button type="submit">Post</button>
  </form>
  <% } %>
</section>

<div id="posts-list-container">
  <ul>
    <% for(let post of posts) { %>

      <%- include('_post', {
        post
      }); -%>

    <%} %>
  </ul>
</div>
